<resources>

    <!-- Base application theme. -->
   <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/toolbarcolornew</item>
        <item name="android:actionMenuTextColor">@android:color/background_light</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <!--toolbar title-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/golden</item>
    </style>

    <style name="FontTextStyle" parent="android:TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:textColor">@color/fonttxtcolor</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="EdittextStyle" parent="Base.V7.Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_margin_3</item>
        <item name="android:paddingBottom">@dimen/padding_margin_3</item>
        <item name="android:paddingLeft">@dimen/padding_margin_10</item>
        <item name="android:paddingRight">@dimen/padding_margin_10</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/height_width_36</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/dashbackground</item>
        <item name="android:textColor">@color/logintext</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="CommonTextStyleregistration" parent="android:TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
</resources>
